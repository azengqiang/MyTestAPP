<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:id="@+id/iv_main_fan_lv_item"
        android:padding="10dp"
        android:src="@drawable/w5"/>
    <TextView
        android:id="@+id/tv_main_fan_lv_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:layout_toRightOf="@id/iv_main_fan_lv_item"
        android:text="标题"/>
    <TextView
        android:id="@+id/tv_main_fan_lv_item_summy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="2dp"
        android:textSize="16sp"
        android:layout_below="@id/tv_main_fan_lv_item_title"
        android:layout_toRightOf="@id/iv_main_fan_lv_item"
        android:text="标题"/>
</RelativeLayout>
